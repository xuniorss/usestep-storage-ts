{
   "name": "usestep-storage-ts",
   "version": "1.1.1",
   "description": "This hook can be used to control each step of a form that was made with the idea of showing each step in the necessary time, thus helping to further componentize a form in react. The Hook stores the state in localstorage and even with the page update it remains in the same step",
   "main": "dist/index.js",
   "author": "xuniorss",
   "license": "MIT",
   "types": "dist/types.d.ts",
   "repository": {
      "type": "git",
      "url": "https://github.com/xuniorss/usestep-storage-ts"
   },
   "publishConfig": {
      "xuniorss:registry": "https://npm.pkg.github.com"
   },
   "keywords": [
      "react",
      "hook",
      "local storage"
   ],
   "scripts": {
      "build": "tsc",
      "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts"
   },
   "dependencies": {
      "@types/react": "^18.0.27",
      "react": "^18.2.0"
   },
   "devDependencies": {
      "@types/node": "^18.13.0",
      "ts-loader": "^9.4.2",
      "ts-node": "^10.9.1",
      "ts-node-dev": "^2.0.0",
      "typescript": "^4.9.5",
      "webpack": "^5.75.0",
      "webpack-cli": "^5.0.1"
   }
}
